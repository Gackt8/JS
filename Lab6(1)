using System;
using System.Collections.Generic;

namespace ConsoleApplication1
{
	
class Human : IComparable<Human> {
	public string surname {get; set;}
	public DateTime birthDay {get; set;}
	public string status {get; set;}

	public Human(string surname, DateTime birthDay, string status){
		this.surname = surname;
		this.birthDay = birthDay;
		this.status = status;
	}
	
	public Human(){
		surname = "null";
		birthDay = DateTime.Today;
		status = "null";
	}
	
	
      public override string ToString() 
        {   
		  int age = DateTime.Now.Year - this.birthDay.Year;
            return string.Format("Фамилия: {0}\nВозраст: {1}\nСтатус: {2}\n", this.surname, age, this.status);
        }

        public int CompareTo(Human obj)
        {
            if (this.birthDay > obj.birthDay)
                return 1;
            if (this.birthDay < obj.birthDay)
                return -1;
            else
                return 0;
        }
	

}
	
   class Student : Human {
	   public int math {get; set;}
	   public int physics {get; set;}
	   public int history {get; set;}
	   
	   public Student(string surname, DateTime birthDay, string status, int math, int physics, int history) :
		base(surname, birthDay, status)
		{
			this.math = math;
			this.physics = physics;
			this.history = history;
		}
	   
		public int mid
		{
			get { return (math + physics + history)/3; }
			set { mid = value; }
		}
	   
	    public override string ToString() 
        {   
		  int age = DateTime.Now.Year - this.birthDay.Year;
          return string.Format("Фамилия: {0}\nВозраст: {1}\nСтатус: {2}\nОценка: {3}", this.surname, age, this.status, this.mid);
        }
	   
   }
	
	

	public class Program
	{
		public static void Main(string[] args)
		{
			List<Human> dic = new List<Human>();
			
			dic.Add(new Human());
			dic.Add(new Human("Александриева", new DateTime(1999, 07, 10), "Студент"));
            dic.Add(new Human("Еленская", new DateTime(1995, 01, 01), "Студент"));
			
			Console.WriteLine("Список людей: \n");
            foreach (Human a in dic)
                Console.WriteLine(a);
			
			Console.WriteLine("\nСортировка по возрасту: \n");
            dic.Sort();
            foreach (Human a in dic)
                Console.WriteLine(a);

			List<Student> dis = new List<Student>();

			dis.Add(new Student("Александриева", new DateTime(1999, 07, 10), "Студент", 7, 5, 6));
            dis.Add(new Student("Еленская", new DateTime(1995, 01, 01), "Студент", 8, 9, 7));

			Console.WriteLine("Список людей: \n");
            foreach (Student b in dis)
                Console.WriteLine(b);
			
			Console.WriteLine("\nСортировка по возрасту: \n");
            dis.Sort();
            foreach (Student b in dis)
                Console.WriteLine(b);
        }
    	}
}
